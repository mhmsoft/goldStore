@model IEnumerable<goldStore.Areas.Panel.Models.Entity.orderDetails>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Panel/Views/Shared/_LayoutAdmin.cshtml";
}

<h2> Sipariş Detayı</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.orderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayName("Price")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product.productName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orders.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.orders.lastname)
        </th>
        <th></th>
    </tr>

    @if (Model.Any())
    {
        foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.orderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem =>  item.product.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product.productName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orders.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.orders.lastname)
        </td>

    </tr>
        }
    }

    <tr>
        <td>Toplam Tutar</td>
        <td> ₺ @Model.Sum(x => x.product.price * x.quantity)</td>
    </tr>
</table>
@Html.ActionLink("Geri","Index","Sale")
